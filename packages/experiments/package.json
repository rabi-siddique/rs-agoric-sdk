    "@endo/eventual-send": "^1.3.1",
    "@endo/far": "^1.1.11",
    "@endo/init": "^1.1.9",
    "@endo/marshal": "^1.6.4",
    "@endo/pass-style": "^1.5.0",
    "@endo/patterns": "^1.5.0"
