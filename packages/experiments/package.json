{
  "name": "agoric-contract-experiments",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start:chain": "docker run -d --name agoric -p 26657:26657 -p 1317:1317 -p 9090:9090 ghcr.io/agoric/agoric-3-proposals:latest",
    "gen-bundles": "esbuild ./src/contract.js --bundle --platform=node --format=esm --outfile=dist/contract.bundle.js --metafile=dist/contract.meta.json --minify --tree-shaking=true",
    "build": "bash build-gmp.sh",
    "deploy": "yarn build && runInsideContainer=true net=devnet planFile=startContract-plan.json node deploy.js",
    "make-off": "node scripts/send-offer.mjs",
    "send-gmp": "node scripts/sendGmp.mjs"
  },
